{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/workers",
    "rootDir": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["workers/**/*", "entities/meditation/**/*", "shared/connect/**/*"]
}
