generator client {
  provider = "prisma-client-js"
  output   = "./_generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(cuid())
  telegram_id          BigInt   @unique
  username             String?
  first_name           String?
  last_name            String?
  photo_url            String?
  points               BigInt   @default(0)   // main currency
  passiveIncomePerHour Int      @default(10)   // points per hour
  passiveLevel         Int      @default(0)    // level of passive upgrade
  lastPassiveUpdate    DateTime @default(now())
  lastDailyClaimAt     DateTime?
  dailyStreak          Int      @default(0)
  referrerId           String?  // FK to User.id
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("users")
}
